<% if flash[:errors]%> 
    <% flash[:errors].each do |error| %> 
        <p><%= error %></p> 
    <% end %> 
<% end %> 

<%= form_for(@student) do |f| %> 
    <div class="field"> 
        <%= f.label :name %> 
        <%= f.text_field :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :mod %> 
        <%= f.number_field :mod %> 
    </div> 
    <div class="actions"> 
        <%= f.submit %> 
    </div> 
<% end %> 