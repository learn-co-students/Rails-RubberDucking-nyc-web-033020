<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <%= err %>
  <% end %>
<% end %>
<%= form_for @duck do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :description %>
  <%= f.text_area :description %><br />
  <%= f.label :student %>
  <%= f.collection_select :student_id, Student.all, :id, :name %><br />
  <%= f.submit %>
<% end %>

<% if @duck.id %>
  <%= form_with(url: duck_path(@duck), method: 'delete') do |f| %>
    <%= f.submit(value: "Delete")%>
  <% end %>
<% end %>
