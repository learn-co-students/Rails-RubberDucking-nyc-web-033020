<% if flash[:errors]%> 
    <% flash[:errors].each do |error| %> 
        <p><%= error %></p> 
    <% end %> 
<% end %> 

<%= form_for(@duck) do |f| %> 
    <div class="field"> 
        <%= f.label :name %> 
        <%= f.text_field :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :description %> 
        <%= f.text_field :description %> 
    </div> 
    <div class="field"> 
        <%= f.label :student_id %> 
        <%= f.collection_select :student_id, @students, :id, :name %> 
    </div> 
    <div class="actions"> 
        <%= f.submit %> 
    </div> 
<% end %> 