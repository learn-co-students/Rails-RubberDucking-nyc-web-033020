<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>

<%= form_for(@duck) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :student_id %>
  <%= f.collection_select :student_id, Student.all, :id, :name %><br>

  <%= f.submit %>
<% end %>
