<h1>New Duck Form</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p> <%= error %> </p>
    <% end %>
<% end %>

<%= form_for @duck do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :student %>
    <%= f.collection_select :student_id, Student.all, :id, :name %>

    <br /><br />

    <%= f.submit %>

<% end %>